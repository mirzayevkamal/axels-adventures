style intro_text:
    size 38
    color "#FFFFFF"

# Positioning transforms
transform top_text:
    xalign 0.5
    yalign 0.2

transform center_text:
    xalign 0.5
    yalign 0.5

transform bottom_text:
    xalign 0.5
    yalign 0.85

# Background pan and zoom effect
transform pan_zoom:
    zoom 1.2
    xalign 0.5
    yalign 0.5
    linear 15.0 zoom 1.0 xalign 0.4 yalign 0.45